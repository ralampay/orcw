<%= form_for [refinery, :downloadable_forms_admin, @downloadable_form] do |f| -%>
  <%= render '/refinery/admin/error_messages',
              :object => @downloadable_form,
              :include_object_name => true %>

  <div class='field'>
    <%= f.label :title -%>
    <%= f.text_field :title, :class => 'larger widest' -%>
  </div>

  <div class='field'>
    <%= f.label :file -%>
    <%= render '/refinery/admin/resource_picker',
               :f => f,
               :field => :file_id,
               :resource => @downloadable_form.file -%>
  </div>

  <div class='field'>
    <%= f.label :is_published -%>
    <%= f.check_box :is_published, :checked => @downloadable_form[:is_published] -%>
  </div>

  <div class='field'>
    <%= f.label :position -%>
    <%= f.number_field :position -%>
  </div>

  <%= render '/refinery/admin/form_actions', f: f,
             continue_editing: false,
             delete_title: t('delete', scope: 'refinery.downloadable_forms.admin.downloadable_forms.downloadable_form'),
             delete_confirmation: t('message', scope: 'refinery.admin.delete', title: @downloadable_form.title),
             cancel_url: refinery.downloadable_forms_admin_downloadable_forms_path -%>
<% end -%>

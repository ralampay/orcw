<% content_for :body_content_title do %>
  <%= @article.title %>
<% end %>

<% content_for :body do %>
  <section>
    <h1>Title</h1>
    <p>
      <%=raw @article.title %>
    </p>
  </section>
  <section>
    <h1>Content</h1>
    <p>
      <%=raw @article.content %>
    </p>
  </section>
  <section>
    <h1>Banner</h1>
    <p>
      <%= image_fu @article.banner, nil %>
    </p>
  </section>
  <section>
    <h1>Is Published</h1>
    <p>
      <%=raw @article.is_published %>
    </p>
  </section>
  <section>
    <h1>Is Featured</h1>
    <p>
      <%=raw @article.is_featured %>
    </p>
  </section>
  <section>
    <h1>Published At</h1>
    <p>
      <%=raw @article.published_at %>
    </p>
  </section>
  <section>
    <h1>Position</h1>
    <p>
      <%=raw @article.position %>
    </p>
  </section>
<% end %>

<% content_for :side_body do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="articles">
      <% @articles.each do |article| %>
        <li>
          <%= link_to article.title, refinery.articles_article_path(article) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>

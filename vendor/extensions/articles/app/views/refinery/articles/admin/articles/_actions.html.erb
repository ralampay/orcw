<ul>
  <% if ::Refinery::Articles::Admin::ArticlesController.searchable? %>
    <li>
      <%= render '/refinery/admin/search', :url => refinery.articles_admin_articles_path %>
    </li>
  <% end %>
  <li>
    <%= action_label :add, refinery.new_articles_admin_article_path, t('.create_new') %>
  </li>
<% if !searching? && ::Refinery::Articles::Admin::ArticlesController.sortable? && ::Refinery::Articles::Article.many? %>
  <li>
    <%= action_label :reorder,
                     refinery.articles_admin_articles_path,
                     t('.reorder', what:  "Articles"), id: 'reorder_action'%>
    <%= action_label :reorder_done,
                     refinery.articles_admin_articles_path,
                      t('.reorder_done', what: "Articles"), id: 'reorder_action_done', class: 'hidden'%>
  </li>
<% end %>
</ul>

<% content_for :body_content_title do %>
  <%= @event.title %>
<% end %>

<% content_for :body do %>
  <section>
    <h1>Title</h1>
    <p>
      <%=raw @event.title %>
    </p>
  </section>
  <section>
    <h1>Description</h1>
    <p>
      <%=raw @event.description %>
    </p>
  </section>
  <section>
    <h1>Date Of Event</h1>
    <p>
      <%=raw @event.date_of_event %>
    </p>
  </section>
  <section>
    <h1>Published At</h1>
    <p>
      <%=raw @event.published_at %>
    </p>
  </section>
  <section>
    <h1>Is Published</h1>
    <p>
      <%=raw @event.is_published %>
    </p>
  </section>
  <section>
    <h1>External Link</h1>
    <p>
      <%=raw @event.external_link %>
    </p>
  </section>
<% end %>

<% content_for :side_body do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="events">
      <% @events.each do |event| %>
        <li>
          <%= link_to event.title, refinery.events_event_path(event) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>

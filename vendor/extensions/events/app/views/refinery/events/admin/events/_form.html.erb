<%= form_for [refinery, :events_admin, @event] do |f| -%>
  <%= render '/refinery/admin/error_messages',
              :object => @event,
              :include_object_name => true %>

  <div class='field'>
    <%= f.label :title -%>
    <%= f.text_field :title, :class => 'larger widest' -%>
  </div>

  <div class='field'>
    <%= f.label :description -%>
    <%= f.text_field :description -%>
  </div>

  <div class='field'>
    <%= f.label :date_of_event -%>
    <%= f.date_select :date_of_event -%>
  </div>

  <div class='field'>
    <%= f.label :published_at -%>
    <%= f.date_select :published_at -%>
  </div>

  <div class='field'>
    <%= f.label :is_published -%>
    <%= f.check_box :is_published, :checked => @event[:is_published] -%>
  </div>

  <div class='field'>
    <%= f.label :external_link -%>
    <%= f.text_field :external_link -%>
  </div>

  <%= render '/refinery/admin/form_actions', f: f,
             continue_editing: false,
             delete_title: t('delete', scope: 'refinery.events.admin.events.event'),
             delete_confirmation: t('message', scope: 'refinery.admin.delete', title: @event.title),
             cancel_url: refinery.events_admin_events_path -%>
<% end -%>

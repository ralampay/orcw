<ul>
  <% if ::Refinery::PolicyFiles::Admin::PolicyFilesController.searchable? %>
    <li>
      <%= render '/refinery/admin/search', :url => refinery.policy_files_admin_policy_files_path %>
    </li>
  <% end %>
  <li>
    <%= action_label :add, refinery.new_policy_files_admin_policy_file_path, t('.create_new') %>
  </li>
<% if !searching? && ::Refinery::PolicyFiles::Admin::PolicyFilesController.sortable? && ::Refinery::PolicyFiles::PolicyFile.many? %>
  <li>
    <%= action_label :reorder,
                     refinery.policy_files_admin_policy_files_path,
                     t('.reorder', what:  "Policy Files"), id: 'reorder_action'%>
    <%= action_label :reorder_done,
                     refinery.policy_files_admin_policy_files_path,
                      t('.reorder_done', what: "Policy Files"), id: 'reorder_action_done', class: 'hidden'%>
  </li>
<% end %>
</ul>

<%= form_for [refinery, :policy_files_admin, @policy_file] do |f| -%>
  <%= render '/refinery/admin/error_messages',
              :object => @policy_file,
              :include_object_name => true %>

  <div class='field'>
    <%= f.label :title -%>
    <%= f.text_field :title, :class => 'larger widest' -%>
  </div>

  <div class='field'>
    <%= f.label :file -%>
    <%= render '/refinery/admin/resource_picker',
               :f => f,
               :field => :file_id,
               :resource => @policy_file.file -%>
  </div>

  <div class='field'>
    <%= f.label :is_published -%>
    <%= f.check_box :is_published, :checked => @policy_file[:is_published] -%>
  </div>

  <div class='field'>
    <%= f.label :position -%>
    <%= f.number_field :position -%>
  </div>

  <%= render '/refinery/admin/form_actions', f: f,
             continue_editing: false,
             delete_title: t('delete', scope: 'refinery.policy_files.admin.policy_files.policy_file'),
             delete_confirmation: t('message', scope: 'refinery.admin.delete', title: @policy_file.title),
             cancel_url: refinery.policy_files_admin_policy_files_path -%>
<% end -%>

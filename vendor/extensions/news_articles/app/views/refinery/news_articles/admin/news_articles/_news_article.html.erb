<li class='clearfix record <%= cycle("on", "on-hover") %>' id="<%= dom_id(news_article) -%>">
  <span class='title'>
    <%= news_article.title %>
  </span>

  <span class='preview'></span>

  <span class='actions'>
    <%= action_icon(:preview, refinery.news_articles_news_article_path(news_article), t('.view_live_html')) %>
    <%= action_icon(:edit,    refinery.edit_news_articles_admin_news_article_path(news_article), t('.edit') ) %>
    <%= action_icon(:delete,  refinery.news_articles_admin_news_article_path(news_article), t('.delete'),
      { class: "cancel confirm-delete",
        data: {confirm: t('message',  scope: 'refinery.admin.delete', title: news_article.title)}}  ) %>
  </span>
</li>

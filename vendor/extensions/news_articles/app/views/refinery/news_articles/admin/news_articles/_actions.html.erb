<ul>
  <% if ::Refinery::NewsArticles::Admin::NewsArticlesController.searchable? %>
    <li>
      <%= render '/refinery/admin/search', :url => refinery.news_articles_admin_news_articles_path %>
    </li>
  <% end %>
  <li>
    <%= action_label :add, refinery.new_news_articles_admin_news_article_path, t('.create_new') %>
  </li>
<% if !searching? && ::Refinery::NewsArticles::Admin::NewsArticlesController.sortable? && ::Refinery::NewsArticles::NewsArticle.many? %>
  <li>
    <%= action_label :reorder,
                     refinery.news_articles_admin_news_articles_path,
                     t('.reorder', what:  "News Articles"), id: 'reorder_action'%>
    <%= action_label :reorder_done,
                     refinery.news_articles_admin_news_articles_path,
                      t('.reorder_done', what: "News Articles"), id: 'reorder_action_done', class: 'hidden'%>
  </li>
<% end %>
</ul>
